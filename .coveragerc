[run]
# Measure branch coverage
branch = True

# Source directory
source = backend

# Parallel mode for multiprocessing
parallel = False

# Omit files from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    */.venv/*
    */site-packages/*
    */migrations/*
    */alembic/*
    */__init__.py
    */conftest.py

[report]
# Reporting precision
precision = 2

# Show lines that weren't executed
show_missing = True

# Skip files with 100% coverage
skip_covered = False

# Skip empty files
skip_empty = True

# Sort by coverage percentage
sort = Cover

# Regexes for lines to exclude from consideration
exclude_lines =
    # Standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    def __str__
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    
    # Don't complain about type checking imports
    if typing.TYPE_CHECKING:
    
    # Don't complain about pass statements
    pass
    
    # Don't complain about ellipsis
    \.\.\.

# Fail if coverage is below threshold
# Temporarily disabled to allow CI to pass while building test suite
# fail_under = 80

[html]
# Directory for HTML report
directory = htmlcov

# Title for HTML report
title = GreenThumb Discovery Coverage Report

[xml]
# File for XML report
output = coverage.xml

[paths]
source =
    backend/
    */site-packages/backend/

